{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "target": "es5",
    "sourceMap": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "lib": ["es6", "es7", "esnext"],
    "types": ["node", "mocha"]
  },
  "include": ["./src/**/*.ts"]
}